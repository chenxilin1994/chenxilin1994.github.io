def for_loop_recur(n: int) -> int:
    """使用迭代模拟递归"""
    # 使用一个显式的栈来模拟系统调用栈
    stack = []
    res = 0
    # 递：递归调用
    for i in range(n, 0, -1):
        # 通过入栈操作模拟递
        stack.append(i)
    # 归：返回结果
    while stack:
        res += stack.pop()
    # res = 1 + 2 + 3 + ... + n
    return res

print(for_loop_recur(10))
